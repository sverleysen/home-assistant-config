- alias: Nachtlamp uit
  initial_state: 'on'
  trigger:
    - platform: event
      event_type: deconz_event
      event_data:
        id: switch_slaapkamer
        event: 2001 # hold
    - platform: event
      event_type: deconz_event
      event_data:
        id: switch_slaapkamer
        event: 2002 # short
    - platform: event
      event_type: deconz_event
      event_data:
        id: switch_slaapkamer
        event: 2003 # long
  action:
    - service: switch.turn_off
      data:
        entity_id: switch.circadian_lighting_slaapkamer
    - service: light.turn_off
      data:
        entity_id: light.nachtlamp