- alias: Nachtlamp aan
  initial_state: 'on'
  trigger:
    - platform: event
      event_type: deconz_event
      event_data:
        id: switch_slaapkamer
        event: 1001 # hold
    - platform: event
      event_type: deconz_event
      event_data:
        id: switch_slaapkamer
        event: 1002 # short
    - platform: event
      event_type: deconz_event
      event_data:
        id: switch_slaapkamer
        event: 1003 # long
  action:
    - service: light.turn_on
      entity_id: 
        - light.nachtlamp
      data:
        transition: 5
        brightness_pct: 1
      # data_template:
      #    brightness_pct: >-
      #     {{ state_attr('switch.circadian_lighting_slaapkamer', 'brightness') | int }}
